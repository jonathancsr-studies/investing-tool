{
  "env": {
    "browser": true,
    "es2015": true
  },
  "extends": [
    "airbnb",
    "prettier/react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/jsx-filename-extension": [1, { "extensions": [".jsx"] }],
    "import/prefer-default-export": "off",
    "camelcase": "off",
    "linebreak-style": ["error", "windows"]
  }
}
